<div class="container">
  <div class="row">
    <div class="col s10 offset-s1">
      <%= simple_form_for(@project) do |f| %>
        <%= f.input :name %>
        <%= f.input :category, collection: ["Social Wall", "Borne", "Conception"], prompt: 'Sélectionnez une catégorie' %>
        <%= f.input :date %>
        <%= f.input :title %>
        <%= f.input :sub_title %>
        <%= f.input :text %>
        <%= f.input :pictures, as: :attachinary %>
        <%= f.input :logo, as: :attachinary %>
        <%= f.submit "Sauvegarder", class: "waves-effect waves-light btn" %>
      <% end %>
    </div>
  </div>
</div>


