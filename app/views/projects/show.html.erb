<% body_class "project-detail" %>

<%= render 'shared/navbar_projet' %>

<header>
  <%= cl_image_tag @project.picture.path, class: 'project-header' %>
  <%= image_tag 'home/icone-mouse.svg', class: 'icon-mouse' %>
</header>

<section class="section-text">
  <div class="container">
    <div class="row">
      <div class="col s10 offset-s2">
        <h1><%= @project.title %></h1>
        <p class="label">Date :<span> <%= I18n.l @project.date, format: :short %> <%= @project.date.year %></span></p>
        <p class="label">Announceur :<span> <%= @project.name %></span></p>
        <%= image_tag icon_category_path(@project.category), class: 'icon-category' %>
      </div>
    </div>
  </div>
</section>

<section class="section-paragraph">
  <div class="container">
    <div class="row">
      <div class="col s10 offset-s2">
        <% @details.each do |detail| %>
          <p><%= detail.text %></p>
          <div class="pictures-detail">
            <% detail.pictures.each do |picture| %>
              <%= cl_image_tag picture.path %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

