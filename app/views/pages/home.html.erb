<h1>Pages#home</h1>

<!-- PROJECTS -->
<section>
  <div class="container">
    <h2>Nos projets</h2>
  <div class="carousel carousel-slider" data-indicators="true">
    <!--   <div class="carousel-fixed-item center">
      <a class="btn waves-effect white grey-text darken-text-2">button</a>
    </div> -->
    <% @projects.each do |project| %>
      <div class="carousel-item" href="">
        <%= render partial: "projects/shared/section_projects", locals: {project: project} %>
      </div>
    <% end %>
  </div>
</section>


<!-- LOGOS -->
<section>
  <div class="container">
    <h2>Nos soutiens</h2>
    <div class="row">
      <% @logos.in_groups_of(5) do |logos| %>
        <div class="col s12 l6">
           <%= render partial: "logos/shared/section_logos", locals: {logos: logos} %>
        </div>
      <% end %>
    </div>
  </div>
</section>

$(document).ready(function(){
  $('.slider').slider();
});

<% content_for :after_js do %>
  <script>
    $(document).ready(function(){
      $('.carousel').slider();
    });
  </script>
<% end %>






