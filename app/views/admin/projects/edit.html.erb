<% body_class "admin" %>

<%= render 'shared/sidebar_admin' %>

<div class="page-content">
  <h3>Mise à jour projet</h3>
  <div class="row">
    <div class="col s10 offset-s1">
      <%= simple_form_for [:admin, @project] do |f| %>
        <%= f.input :name %>
        <%= f.input :category, collection: ["Social Wall", "Borne", "Conception"], prompt: 'Sélectionnez une catégorie' %>
        <%= f.input :date %>
        <%= f.input :title %>
        <%= f.input :picture, as: :attachinary %>
        <%= f.input :logo, as: :attachinary %>
        <%= f.input :active, collection: [['Oui', true ], ['Non', false ]] %>
        <%= f.submit "Sauvegarder", class: "waves-effect waves-light btn" %>
      <% end %>
      <!-- INDEX liste des details project -->
      <%= link_to 'Paragraphes', admin_project_details_path(project_id: @project.id), class: 'btn-ouibeat dark waves-effect waves-light' %>
      <!-- BACK TO index projects -->
      <%= link_to admin_projects_path do %>
        <p class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">skip_previous</i></p>
      <% end %>
    </div>
  </div>
</div>


