<% body_class "admin" %>

<%= render 'shared/sidebar_admin' %>

<div class="container">
  <h3>Mise Ã  jour logo</h3>
  <div class="row">
    <div class="col s10 offset-s1">
      <%= simple_form_for [:admin, @logo] do |f| %>
        <%= f.input :name %>
        <%= f.input :link %>
        <% if f.object.picture? %>
          <%= cl_image_tag f.object.picture.path, width: 100, height: 100, crop: :fill %>
        <% end %>
        <%= f.input :picture, as: :attachinary %>
        <%= f.submit "Sauvegarder", class: "waves-effect waves-light btn" %>
      <% end %>
      <!-- BACK TO index logos -->
      <%= link_to admin_path do %>
        <p class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">skip_previous</i></p>
      <% end %>
    </div>
  </div>
</div>
