<div class="container">
  <div class="row">
    <div class="col s10 offset-s1">
      <%= simple_form_for(@logo) do |f| %>
        <%= f.input :name %>
        <%= f.input :link %>
        <% if f.object.picture? %>
          <%= cl_image_tag f.object.picture.path, width: 100, height: 100, crop: :fill %>
        <% end %>
        <%= f.input :picture, as: :attachinary %> %>

        <%= f.submit "Sauvegarder", class: "waves-effect waves-light btn" %>
      <% end %>
    </div>
  </div>
</div>
